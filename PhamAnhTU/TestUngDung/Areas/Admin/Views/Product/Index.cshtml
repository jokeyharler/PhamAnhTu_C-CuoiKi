@using PagedList.Mvc
@using PagedList
@model IEnumerable<ModelEF.Model.Product>
@{
    ViewBag.Title = "Quản lí sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user"></i>&nbsp; Quản lí sản phẩm
}
@using (Html.BeginForm("Index", "Product", FormMethod.Post))
{

    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            @Html.ActionLink("Tạo mới", "Create", "Product", new { @class = "btn btn-danger" })
        </div>

    </div>
}

<div class="col-lg-12 form-group">
    <table class="table">
        <tr>
            <th style="color:blue;">STT</th>
            
            <th style="color:blue;">
                Tên
            </th>
            <th style="color:blue;">
                Giá
            </th>
            <th style="color:blue;">
                Số lượng
            </th>
            <th style="color:blue;">
                LoaiSP
            </th>
            <th style="color:blue;">
                Hành động
            </th>

        </tr>
        @{ var i = 1;}
        @foreach (var item in Model)
        {
            <tr id="row_@item.ID">
                <td>@i</td>
                
                <td>
                    @item.Name
                </td>
                <td>
                    @item.UnitCost
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>

                    @Html.ActionLink("Details", "ProductDetail", new { id = item.ID }, new { @class = "btn btn-danger" }) |
                    @Ajax.ActionLink(" ", "Delete", new { @ID = item.ID }, new AjaxOptions
               {
                   Confirm = "Bạn có muốn xóa bản ghi này?",
                   OnComplete = "$('#row_" + item.ID + "').remove()",
                   HttpMethod = "Delete"
               }, new { @class = "glyphicon glyphicon-trash" })
                </td>
            </tr>
            i++;
        }

    </table>
</div>
